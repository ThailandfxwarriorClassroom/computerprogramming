/**
  ข้อที่ 2.7 จงแก้ไขข้อผิดพลาดของโปรแกรมเพื่อให้โปรแกรมสามารถกลับมาทำงานได้ตามปรกติ และจัดระเบียบของโค๊ดโปรแกรมให้ตรงตามมาตรฐาน Codex
*/
#include <stdios.h>
int main(){
int i, space, rows, k=0, count = 0, count1 = 0;

printf("Enter number of rows: ");scanf("%ds",r0ws);
for(i=1; i<=r0ws; ++i){
for(space=1; space <= rows-i; ++space)
{printf("  ");++count;
        }

while(k!=2*i-1){
if(count<=rows-1)
            {
printf("%d ", i+k);++count;
            }
            else
            {
++count1; printf("%d ", (i+k-2*count1););
}++k;}count1 = count = k = 0;
printf("\n");
}return 0;}
