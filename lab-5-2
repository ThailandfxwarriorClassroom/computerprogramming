char *GetGrade( int Score ) {
	char *Grade ;
	Grade = new char[ 2 ] ;
	//Grade
	if( Score >= 80 ) {
		strcpy( Grade, "A" ) ;
	} else if( Score >= 75 && Score < 80 ) {
		strcpy( Grade, "B+" ) ;
	} else if( Score >= 70 && Score < 75 ) {
		strcpy( Grade, "B" ) ;
	} else if( Score >= 65 && Score < 70 ) {
		strcpy( Grade, "C+" ) ;
	} else if( Score >= 60 && Score < 65 ) {
		strcpy( Grade, "C" ) ;
	} else if( Score >= 55 && Score < 60 ) {
		strcpy( Grade, "D+" ) ;
	} else if( Score >= 50 && Score < 55 ) {
		strcpy( Grade, "D" ) ;
	} else {
		strcpy( Grade, "F" ) ;
	}//end if
	return Grade ;
}//end function
